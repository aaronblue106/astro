---
import { Image } from 'astro:assets';
import logo from '../assets/logo-vuong.png';
---
<header class="bg-gray-900 text-white fixed w-full top-0 z-50">
    <div class="container mx-auto px-4">
        <div class="hidden md:flex items-center">
            <Image src={logo} alt="VanLangSport" width="150" height="150" class="w-auto h-[150px]" />
            <h1 class="ml-4 text-xl font-bold">TRỰC TIẾP BÓNG ĐÁ ĐỈNH CAO</h1>
        </div>
        <div class="flex items-center justify-between py-4">
            <div class="md:hidden flex items-center">
                <Image src={logo} alt="VanLangSport" width="100" height="100" class="w-auto h-10" />
                <h1 class="ml-4 text-xl font-bold">TRỰC TIẾP BÓNG ĐÁ ĐỈNH CAO</h1>
            </div>
            
            <!-- Mobile menu button -->
            <button id="mobile-menu-button" class="md:hidden flex items-center px-3 py-2" aria-label="Menu">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>

            <!-- Navigation Menu -->
            <nav id="nav-menu" class="hidden md:block absolute md:relative top-full left-0 w-full md:w-auto bg-gray-900 md:bg-transparent">
                <ul class="flex flex-col md:flex-row md:items-center space-y-4 md:space-y-0 md:space-x-6 p-4 md:p-0">
                    <li><a href="/" class="block hover:text-yellow-400 transition-colors">TRỰC TIẾP BÓNG ĐÁ</a></li>
                    <li><a href="/lich-thi-dau" class="block hover:text-yellow-400 transition-colors">LỊCH THI ĐẤU</a></li>
                    <li><a href="/ket-qua-bong-da" class="block hover:text-yellow-400 transition-colors">KẾT QUẢ BÓNG ĐÁ</a></li>
                    <li><a href="/soi-keo-bong-da" class="block hover:text-yellow-400 transition-colors">SOI KÈO BÓNG ĐÁ</a></li>
                </ul>
            </nav>
        </div>
    </div>
</header>

<script>
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const navMenu = document.getElementById('nav-menu');

    mobileMenuButton?.addEventListener('click', () => {
        navMenu?.classList.toggle('hidden');
    });

    // Hide menu when clicking outside
    document.addEventListener('click', (event) => {
        const target = event.target as HTMLElement;
        if (!target.closest('#mobile-menu-button') && !target.closest('#nav-menu')) {
            navMenu?.classList.add('hidden');
        }
    });
</script>